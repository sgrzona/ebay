
<% if user_signed_in? %>
  <%= link_to new_auction_path do %>
  <h3><span class="glyphicon glyphicon-plus"></span> New Auction </h3>
<% end %>
<% end %>

<div id="auctions" class="transitions-enabled">
  <% @auctions.each do |auction| %>
    <div class="box panel panel-default">
       <%= link_to image_tag(auction.image.url(:medium)), auction %>
         <div class="panel-body">
         <p><strong>Title:</strong>
           <%= auction.title %></p>
           <p><strong>Description:</strong>
           <%= auction.description %></p>
           <p><strong>User:</strong>
           <%= auction.user %></p>
           <p><strong>End Time:</strong>
           <%= auction.expires_at %></p>
           <p><strong>Current Bid:</strong>
           <%= auction.highest_auction_bid %></p>
         </div>
    </div>
  <% end %>
</div>

