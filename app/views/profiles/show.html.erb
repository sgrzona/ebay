<% if @profile %>

  <% if current_user and @user and current_user.id == @user.id %>
    <h1>My Profile</h1>
  <% else %>
    <h1><%= @profile %>'s Profile</h1>
  <% end %>

  <p>
  <%= image_tag @profile.image.url(:medium) %>
  </p>

  <p>
    <strong>Username:</strong>
     <%= @profile.username %>
  </p>

  <p>
    <strong>Name:</strong>
      <%= @profile.first_name %>
      <%= @profile.last_name %>
  </p>


  <p> 
    <strong>About Me:</strong>
      <%= @profile.blurb %>
  </p>
<% else %>
  <h1>This user has not created a profile.</h1>
<% end %>
